{
  "manifest_version": 3,
  "name": "Niche Amazon Helper",
  "version": "1.0.0",
  "description": "Auto-grab Amazon Seller Central cookie and CSRF for your app.",
  "permissions": ["cookies", "tabs", "webRequest", "storage", "activeTab"],
  "host_permissions": [
  "https://sellercentral.amazon.com/*",
  "https://amazon.com/*",
  "https://sellercentral.amazon.co.uk/*",
  "https://amazon.co.uk/*",
  "https://sellercentral.amazon.fr/*",
  "https://amazon.fr/*",
  "https://sellercentral.amazon.es/*",
  "https://amazon.es/*",
  "https://sellercentral.amazon.it/*",
  "https://amazon.it/*",
  "https://sellercentral.amazon.de/*",
  "https://amazon.de/*",
  "https://sellercentral.amazon.nl/*",
  "https://amazon.nl/*",
  "https://sellercentral.amazon.se/*",
  "https://amazon.se/*",
  "https://sellercentral.amazon.pl/*",
  "https://amazon.pl/*",
  "https://sellercentral.amazon.com.be/*",
  "https://amazon.com.be/*",
  "https://sellercentral.amazon.ca/*",
  "https://amazon.ca/*",
  "https://sellercentral.amazon.com.mx/*",
  "https://amazon.com.mx/*",
  "https://sellercentral.amazon.co.jp/*",
  "https://amazon.co.jp/*",
  "https://sellercentral.amazon.com.au/*",
  "https://amazon.com.au/*",
  "https://sellercentral.amazon.sg/*",
  "https://amazon.sg/*",
  "https://sellercentral.amazon.in/*",
  "https://amazon.in/*",
  "https://sellercentral.amazon.ae/*",
  "https://amazon.ae/*",
  "https://sellercentral.amazon.sa/*",
  "https://amazon.sa/*",
  "https://sellercentral.amazon.eg/*",
  "https://amazon.eg/*",
  "https://sellercentral.amazon.com.tr/*",
  "https://amazon.com.tr/*",
  "https://sellercentral.amazon.com.br/*",
  "https://amazon.com.br/*",
  "https://sellercentral.amazon.cn/*",
  "https://amazon.cn/*"
],
  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:3000/*",
        "https://tw-amazonnichefinder.netlify.app/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
